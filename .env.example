
# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Demo Mode (set to false for production with real SMS)
DEMO_MODE=true

# Primary SMS Provider - Twilio (Enterprise-grade)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Backup SMS Provider - Fast2SMS (Indian SMS service)
FAST2SMS_API_KEY=your_fast2sms_api_key
FAST2SMS_SENDER_ID=your_sender_id

# Fallback SMS Provider - TextLocal
TEXTLOCAL_API_KEY=your_textlocal_api_key
TEXTLOCAL_SENDER=your_textlocal_sender

# Security Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
FACE_ENCRYPTION_KEY=your_face_encryption_key_32_characters

# API and WebSocket Configuration
VITE_API_URL=http://localhost:3000/api
VITE_SOCKET_URL=http://localhost:3000

# LocalTunnel Configuration (for public deployment)
LOCALTUNNEL_SUBDOMAIN=voteguard

# Development Configuration
VITE_DEV_PORT=5173
VITE_PUBLIC_PORT=8080
